@model List<PoEBrowser.Models.CurrencyItem>

@{
    ViewData["Title"] = "Currency";
}

@{
    int totalItems = Model.Count();
}

<div class="container">

    <div class="row">
        <div style="text-align: center; font-size: x-small; width: 100%"><i>Displaying @totalItems Items</i></div>
    </div>

    @{
        var prevItemType = "";

        <div class="container">
            @{
                var itemCount = 0;
                var rowClosed = false;

                for (int i = 0; i < totalItems; i++)
                {
                    if (prevItemType != Model[i].ItemClass)
                    {
                        if (!rowClosed)
                        {
                        @:</div>
                        rowClosed = true;
                    }

                    if (i > 0)
                    {
                        <br />
                        <br />
                    }

                    <div class="row" style="width: 100%">
                        <div class="col-md">
                            <h5><b>@Model[i].ItemClass</b></h5>
                        </div>
                    </div>

                    itemCount = 0;
                }

                if (itemCount == 0)
                {
                    @:<div class='row'>
                        rowClosed = false;
                    }

                    <div class="col-md-4">
                        <img style="max-height: 25px; width: auto" src=@Model[i].ImgSrcString>
                        <a href="#">@Model[i].ItemName</a>
                    </div>

                    if (itemCount == 2)
                    {
                        itemCount = 0;
                        rowClosed = true;
                    @:</div>
                }
                else
                {
                    itemCount++;
                }

                prevItemType = Model[i].ItemClass;
            }

            }

        </div>
    }
    </div>